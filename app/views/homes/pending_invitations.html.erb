  <p>Pending Request Users List</p>            
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Email</th>
        <th>Name</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each_with_index do |user, index|%>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= user.email %></td>
        <td><%= user.full_name %></td>
        <%if FriendList.check_status(current_user.id, user.id) %>
        <td><%=link_to "Accept", accept_request_home_path(user), method: :post %></td>
        <%end%>
      </tr>
      <%end%>

      
    </tbody>
  </table>
  