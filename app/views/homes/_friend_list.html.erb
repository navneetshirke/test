<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Email</th>
      <th>Name</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do |user, index|%>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= user.email %></td>
      <td><%= user.full_name %></td>
      <%if User.my_friend(current_user.id,user.id)%>
      <td><%=link_to "Profile", profile_home_path(user)%></td>
      <%else%>
      <td><%=link_to "Send Friend Request", send_request_home_path(user), method: :post %></td>
      <%end%>
    </tr>
    <%end%>
    
  </tbody>
</table>
